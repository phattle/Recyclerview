<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#F1ECEC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <FrameLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imageNowFood"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:src="@drawable/highland"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="280:187"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>
                <ImageView
                    android:id="@+id/imageStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_status_online" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6">
                <TextView
                    app:layout_constraintBottom_toTopOf="@id/linearContainerAddress"
                    android:id="@+id/textViewName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Sữa Chua Trân Châu Hạ Long HCM 213213213213213"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"/>
                <LinearLayout
                    android:id="@+id/linearContainerAddress"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textViewName"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/constraintPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textViewAddress"
                        android:textStyle="bold"
                        android:textColor="#81C4E8"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="64 địa điểm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/textViewDetailAddress"
                        android:textColor="#878585"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="79 Đinh Tiên Hoàng, P3, Bình Thạnh, TP.HCM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"/>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/linearContainerCategory"
                    app:layout_constraintTop_toBottomOf="@id/linearContainerAddress"
                    android:id="@+id/constraintPrice"
                    android:layout_marginRight="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageMinPrice"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/imageMinPrice"
                        android:src="@drawable/ic_price_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/textViewMinPrice"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/imageMinPrice"
                        app:layout_constraintRight_toLeftOf="@id/imagePrice"
                        android:layout_width="wrap_content"
                        android:textColor="#000000"
                        android:text="Tối thiểu 20 k"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/imagePrice"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/textViewMinPrice"
                        app:layout_constraintRight_toLeftOf="@id/textViewPrice"
                        android:src="@drawable/ic_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/textViewPrice"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/imagePrice"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="wrap_content"
                        android:textColor="#000000"
                        android:text="Giá 37k"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linearContainerCategory"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/constraintPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:id="@+id/linearContainerSaleOff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginStart="10dp"
                            android:id="@+id/textViewSaleOff"
                            android:textStyle="bold"
                            android:textColor="#81C4E8"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="FREE SHIP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/textViewCategory"
                        android:textColor="#878585"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="QUÁN ĂN, ĂN VẶT/VỈA HÈ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>